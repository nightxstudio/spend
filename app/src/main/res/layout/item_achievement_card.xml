<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_achievement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/achievement_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_trophy"
        android:contentDescription="Achievement Icon"
        android:layout_marginEnd="12dp" />

    <!-- Texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_achievement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E3A59" />

        <TextView
            android:id="@+id/text_achievement_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/text_achievement_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 pts"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFA000"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/text_achievement_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Earned"
                android:textSize="12sp"
                android:textColor="#B0BEC5"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_achievement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
