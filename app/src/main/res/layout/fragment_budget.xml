<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Budget Overview"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="20dp" />

        <!-- Budget Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_input"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Budget Limit and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_budget_limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹2000"
                    android:textSize="28sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_edit_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="18sp"
                    android:backgroundTint="@color/primary_green"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    android:minHeight="36dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"/>
            </LinearLayout>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progress_budget"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="12dp"
                android:progress="40"
                android:progressTint="@color/dark_green"
                android:max="100" />

            <!-- Breakdown Text -->
            <TextView
                android:id="@+id/text_budget_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹800 spent of ₹2000"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Optional Quote -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Track every rupee, save every month.”"
            android:textStyle="italic"
            android:textColor="@color/text_dark"
            android:layout_marginTop="24dp"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
