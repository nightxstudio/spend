<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SpendWise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark mode adapted colors -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorOnSecondary">@color/text_light</item>

        <!-- Background and surface -->
        <item name="android:windowBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/text_light</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/text_light</item>

        <!-- Navigation/Status Bars -->
        <item name="android:statusBarColor">@color/dark_green</item>
        <item name="android:navigationBarColor">#1E1E1E</item>
    </style>

    <!-- Active Theme -->
    <style name="Theme.SpendWise" parent="Base.Theme.SpendWise" />
</resources>
